<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE model SYSTEM "model.dtd">

<model name="ServerCMU">
    <class name="Ticket">
        <attribute name="number" required="true" type="int"/>
        <attribute name="taken" type="int"/>
    </class>
    <class name="User">
        <attribute name="username" type="String"/>
    </class>
    <class name="Tour">
        <attribute name="name" type="String"/>
    </class>
    <class name="Session">
        <attribute name="token" type="String"/>
        <attribute name="random" type="int"/>
        <attribute name="sharedToken" type="String"/>
    </class>
    <class name="Monument">
        <attribute name="name" type="String"/>
        <attribute name="wifiId" type="String"/>
        <attribute name="imageURL" type="String"/>
    </class>
    <class name="Quiz">
        <attribute name="name" type="String"/>
    </class>
    <class name="Question">
        <attribute name="question" type="String"/>
    </class>
    <class name="Answer">
        <attribute name="answer" type="String"/>
        <attribute name="correct" type="int"/>
    </class>
    <class name="QuizResponse">
        <attribute name="score" type="int"/>
        <attribute name="date" type="Date"/>
    </class>
    <relation base="User" target="Session" type="OneToOne"/>
    <relation base="User" target="Ticket" type="OneToOne"/>
    <relation base="Ticket" target="Tour" type="ManyToOne"/>
    <relation base="Tour" target="Monument" type="ManyToMany"/>
    <relation base="Monument" target="Quiz" type="OneToOne"/>
    <relation base="Question" target="Quiz" type="ManyToOne"/>
    <relation base="Question" target="Answer" type="OneToMany"/>
    <relation base="Quiz" target="QuizResponse" type="OneToMany"/>
    <relation base="User" target="QuizResponse" type="OneToMany"/>
</model>


