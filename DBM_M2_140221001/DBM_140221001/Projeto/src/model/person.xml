<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE model SYSTEM "model.dtd">

<model name="ESTS">
    <class name="Person">
        <attribute name="name"   required="true" type="String"/>
        <attribute name="age" min="1" max="80" type="int"/>
    </class>
    <class name="Animal">
        <attribute name="name" type="String"/>
        <attribute name="type" type="String"/>
    </class>
    <class name="MegaAnimal">
        <attribute name="name" type="String"/>
        <attribute name="superType" type="String"/>
    </class>
    <relation base="Person" target="Animal" type="OneToMany"></relation>
    <relation base="Animal" target="MegaAnimal" type="OneToMany"></relation>
    <relation base="Person" target="MegaAnimal" type="ManyToMany"></relation>
</model>


