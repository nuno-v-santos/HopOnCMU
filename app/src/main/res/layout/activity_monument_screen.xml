<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.ulisboa.tecnico.cmov.cmu_project.Monument.MonumentScreenActivity">


    <ImageView
        android:id="@+id/imgViewMonument"
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        />

    <TextView
        android:id="@+id/txtMonumentName"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:text="Torre de CMU"
        android:textAlignment="viewStart"
        android:textColor="@color/colorWhite"
        android:textSize="45dp"
        app:layout_constraintTop_toBottomOf="@+id/imgViewMonument"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/txtMonumentInfo"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="24dp"
        android:text="@string/loremIpsumMonument"
        android:textColor="@color/colorGray"
        app:layout_constraintTop_toBottomOf="@+id/txtMonumentName"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />


    <Button
        android:id="@+id/btnDownloadQuiz"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@color/colorPrimary"
        android:onClick="btnDownloadQuizOnClick"
        android:text="@string/btnDownloadQuiz"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@+id/txtMonumentInfo"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>
